extends layout

block content
    link(rel='stylesheet', href='/stylesheets/bio.css')

    .greeting-content

        .greeting-inner
      
            .greeting
                span Hi
                span.text-color-b1 , 
                span I
                span.text-color-b1 '
                span m Ben Remnant
            
            .greeting-subtitle 
                span Front 
                span.text-color-b1 & 
                span back end 
                br.phone-only
                span web developer
          
        .read-more.no-select(onclick="scrollDown()")
            span.no-select.read-more-text Scroll to read more
            br
            br
            .glyphicon.glyphicon-menu-down.no-select


    .bio-content
        .bio-left
            .bio-photo
                .bio-photo-inner
            .bio-name Ben Remnant
            .bio-profession 
                span Front 
                span.text-color-b1 & 
                span back end 
                span web developer
            a.bio-resume-button(href="/resume") View Resume
                
        .bio-right
        
            .bio-right-nav
                .bio-right-nav-button.selected(id="about") About me
                .bio-right-nav-button(id="history") My Recent History
                
                
            .bio-desc.bio-about
                span.bio-desc-title About Me
                span Hi, I'm Ben Remnant. I live in Upper Hutt in the Wellington Region. I am currently a self employed, full stack web developer. I am self motivated & passionate about all things development.
                br
                br
                span In my spare time I build and program IoT devices with arduino microcontrollers. 
                
            .bio-desc.bio-history
                span.bio-desc-title My Recent History
                span Over the past few years I have been freelancing. Originally designing and developing Danfoss NZ's website.
                br
                br
                span The Danfoss NZ website has been the source of the majority of my income as it is the biggest project I have done. Danfoss still request new features and employ me to maintain the server and the website.
                br
                br
                span Over this time I have picked up a few smaller freelancing projects to increase my income but I am now looking for a more full time job for stability.
                
        
    script.
    
        // ====Page Setup====
        
        // Select first bio nav button and display its panel
        $("#about").css('color', 'var(--b1)');
        $(".bio-about").css('display', 'block');
    
    
        // ====Bio Nav====
        
        // Clicked a bio nav button
        $('.bio-right-nav-button').click(function() {
            // Clear last selection
            $('.bio-right-nav-button').css('color', 'var(--g1)');
            $(".bio-desc").css('display', 'none');
            // Select this bio nav button and display its panel
            $(this).css('color', 'var(--b1)');
            if($(this).attr('id') == 'about') {
                $(".bio-about").css('display', 'block');
            } else if($(this).attr('id') == 'history') {
                $(".bio-history").css('display', 'block');
            } else if($(this).attr('id') == 'software') {
                $(".bio-software").css('display', 'block');
            }
        });
        
        
        // ====Other====
        
        // Add custom scroll
        window.addEventListener('wheel', function(event) {
            event.preventDefault();
            if(scrollReady){
                if(event.deltaY < 0 && scrollPos != 0) {
                    scrollUp();
                } else if(event.deltaY > 0 && scrollPos != scrollMax) {
                    scrollDown();
                }
            }
        });
      
        // Make read more cursor hover up and down
        function levitate(id) {
            $(id).css('transform', 'translate(0px, -2px)');
            setTimeout(()=>{levitateR(id);}, 400);
        }
        function levitateR(id) {
            $(id).css('transform', 'translate(0px, 2px)');
            setTimeout(()=>{levitate(id);}, 400);
        }
        levitate(".glyphicon-menu-down");
        levitate(".glyphicon-menu-up");