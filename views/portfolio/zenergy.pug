block content
    link(rel='stylesheet', href='/stylesheets/portfolio-item.css')

    .item-container
        .item-inner
            .item-inner-left
                        
                .item-maintext 
                    span.text-color-b1 Z Energy 
                    span(style="font-size: 50px; color: var(--g2);") Emails
                            
                .item-stats
                    span Project Type
                    span : 
                    span.text-color-b1(style="float: right;") HTML Email
                    br
                    span Project Nature
                    span : 
