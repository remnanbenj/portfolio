                    span.text-color-b1(style="float: right;") Developer
                    br
                    span Languages
                    span : 
                    span.text-color-b1(style="float: right;") HTML, CSS 
                    
                .item-icons
                    .item-icons-left
                        a.item-icon(href="/portfolio#1")
                            .glyphicon.glyphicon-circle-arrow-left
                            .item-icon-text Back
                            
                    .item-icons-right
                        a.item-icon(href="https://github.com/remnanbenj/zenergy-html-email/" target="_blank" style="margin-left: 20px;")
                            .item-github-icon
