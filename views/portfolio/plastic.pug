extends ../layout

block content
    link(rel='stylesheet', href='/stylesheets/portfolio-item.css')

    .item-container
        .item-inner
            .item-inner-left
                        
                .item-maintext 
                    span.text-color-b1 PLASTIC 
                    span(style="font-size: 50px; color: var(--g2);") the game
                            
                .item-stats
                    span Project Type: 
                    span.text-color-b1(style="float: right;") Promotional Website
                    br
                    span Project Nature: 
                    span.text-color-b1(style="float: right;") Concept 
                    br
                    span Languages: 
                    span.text-color-b1(style="float: right;") HTML, CSS, JavaScript
                    br
                    span Run Time Enviroment: 
                    span.text-color-b1(style="float: right;") Node.js 
                     
                .item-description-title
                .item-description
                    
                .item-icons
                    .item-icons-left
                        a.item-icon(href="/portfolio#1")
                            .glyphicon.glyphicon-circle-arrow-left
                            .item-icon-text Back
                            
                    .item-icons-right
                        a.item-icon(href="http://berd.co.nz:3005/" target="_blank")
                            .glyphicon.glyphicon-globe
                            .item-icon-text Live Link
                            
                        a.item-icon(href="https://github.com/remnanbenj/plastic/" target="_blank" style="margin-left: 20px;")
                            .item-github-icon
                            .item-icon-text Github
                    
            .item-inner-right
            
                .item-image(style="background-color: #444444;")
                
                .item-image-nav.noselect
                    .item-image-nav-inner
                        .glyphicon.glyphicon-menu-left(onclick="prevImage()")
                        .item-image-nav-dot(id="d0")
                        .item-image-nav-dot(id="d1")
                        .item-image-nav-dot(id="d2")
                        .glyphicon.glyphicon-menu-right(onclick="nextImage()")
                        
                    .item-image-nav-info &nbsp;
                    
                    .item-image-nav-screensize
                        .glyphicon.glyphicon-menu-up
                        .item-monitor-icon.selected
                        .glyphicon.glyphicon-phone
                        .glyphicon.glyphicon-menu-down
                        
                        
            .item-inner-bottom 
            
                .item-description-title
                .item-description
                            
                .item-stats
                    span Project Type
                    span : 
                    span.text-color-b1(style="float: right;") Promotional Website
                    br
                    span Project Nature
                    span : 
                    span.text-color-b1(style="float: right;") Concept 
                    br
                    span Languages
                    span : 
                    span.text-color-b1(style="float: right;") HTML, CSS, JavaScript
                    br
                    span Run Time Enviroment
                    span : 
                    span.text-color-b1(style="float: right;") Node.js 
                    
                .item-icons
                    .item-icons-left
                        a.item-icon(href="/portfolio#1")
                            .glyphicon.glyphicon-circle-arrow-left
                            .item-icon-text Back
                            
                    .item-icons-right
                        a.item-icon(href="http://berd.co.nz:3005/" target="_blank")
                            .glyphicon.glyphicon-globe
                            .item-icon-text Live Link
                            
                        a.item-icon(href="https://github.com/remnanbenj/plastic/" target="_blank" style="margin-left: 20px;")
                            .item-github-icon
                            .item-icon-text Github
                     
